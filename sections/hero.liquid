<section style="padding: clamp(56px, 8vw, 100px) 0; border-bottom:1px solid #1f1f1f;">
  <div class="container grid grid-2" style="align-items:center;">
    <div>
      <h1 style="font-size: clamp(2rem, 6vw, 4rem); line-height:1.05; margin:0 0 1rem 0; font-weight:900;">
        {{ section.settings.heading | default: 'REPZ or Die Tryin’' }}
      </h1>
      <p class="muted" style="font-size:1.125rem;max-width:56ch;">
        {{ section.settings.subheading | default: "Lancement officiel — une seule pièce, pensée pour la salle et la rue." }}
      </p>
      {% if section.settings.button_label != blank %}
      <div style="margin-top:1.25rem;">
        <a class="btn" href="{{ section.settings.button_link | default: routes.all_products_collection_url }}">
          {{ section.settings.button_label }}
        </a>
      </div>
      {% endif %}
    </div>
    <div class="card" style="min-height:280px; display:flex; align-items:center; justify-content:center; background: url({{ section.settings.bg | image_url: width: 1200 }}) center/cover no-repeat, #121212;">
      <div class="muted">Image bannière / placeholder</div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Bannière Hero",
  "settings": [
    { "type":"text", "id":"heading", "label":"Titre", "default":"REPZ or Die Tryin’" },
    { "type":"text", "id":"subheading", "label":"Sous-titre", "default":"Lancement officiel — une seule pièce, pensée pour la salle et la rue." },
    { "type":"text", "id":"button_label", "label":"Texte du bouton", "default":"Acheter maintenant" },
    { "type":"url", "id":"button_link", "label":"Lien du bouton" },
    { "type":"image_picker", "id":"bg", "label":"Image d’arrière-plan" }
  ]
}
{% endschema %}
